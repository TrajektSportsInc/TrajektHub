{
  "name": "server-ts",
  "version": "1.0.0",
  "description": "bare bones template for a back-end server built using Node.js and TypeScript",
  "main": "server.ts",
  "scripts": {
    "clean": "rimraf dist/*",
    "tsc": "tsc --project ./",
    "build": "npm run clean && npm run tsc",
    "start:dev": "ts-node-dev --respawn ./src/index.ts",
    "start:dist": "node ./dist/index.js",
    "test": "echo \"ERROR: Testing is the next guy's problem.\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/carl-wong/node-server-ts.git"
  },
  "keywords": [
    "node",
    "typescript"
  ],
  "author": "Carl Wong",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/carl-wong/node-server-ts/issues"
  },
  "homepage": "https://github.com/carl-wong/node-server-ts#readme",
  "dependencies": {
    "body-parser": "^1.19.1",
    "dotenv": "^16.0.0",
    "express": "^4.17.2",
    "helmet": "^5.0.2",
    "http-status-codes": "^2.3.0",
    "module-alias": "^2.2.2",
    "morgan": "^1.10.0",
    "rotating-file-stream": "^3.0.2"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.2",
    "@types/express": "^4.17.13",
    "@types/helmet": "^4.0.0",
    "@types/module-alias": "^2.0.1",
    "@types/morgan": "^1.9.3",
    "@types/node": "^17.0.17",
    "rimraf": "^3.0.2",
    "ts-node": "^10.5.0",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.5.5"
  }
}
